<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/gl"
              android:visibility="visible"
              android:stretchColumns="0, 1, 2, 3"
              android:background="#150dff">

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wizardBtn"
                    android:background="@drawable/wizard" android:onClick="wizardBtnClick"
                    android:enabled="true" android:visibility="visible"
                    android:contentDescription="aaa" android:layout_column="0" android:layout_gravity="left"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body"
                android:id="@+id/rBody" android:layout_column="1" android:checked="true" android:background="#050447"
                android:onClick="bodyRbtnClick"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legs"
                android:id="@+id/rLegs" android:layout_column="2" android:checked="false" android:singleLine="false"
                android:background="#050447" android:onClick="legsRbtnClick"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:id="@+id/startBtn" android:onClick="startBtnClick"
                android:enabled="true" android:visibility="visible" android:focusable="false"
                android:layout_column="3" android:layout_gravity="right"/>
    </TableRow>
</TableLayout>

